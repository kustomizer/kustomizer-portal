{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["cc-safety-net"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "sentry": {
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
      "oauth": {},
      "enabled": false
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    }
  },
  "tools": {
    "sentry_*": false,
    "gh_grep_*": false
  }
}
